{
  "name": "spam-tweets-compressor",
  "version": "2.0.4",
  "description": "A browser extension which compresses spam Tweets.",
  "main": "main.js",
  "scripts": {
    "test": "npx jest",
    "build:css": "npx sass src/css:dist --style=compressed --update",
    "build:js": "npx webpack",
    "build": "npm-run-all --parallel build:*",
    "watch:js": "npx webpack -w",
    "watch:css": "npx sass src/css:dist --style=compressed --watch",
    "watch": "npm-run-all --parallel watch:*",
    "lint:js": "npx eslint src/**/*.ts",
    "lint:css": "stylelint src/**/*.{css,scss,sass}",
    "lint": "npm-run-all --parallel lint:*",
    "format": "npx prettier --write \"src/**/*.{js,ts,css,scss}\"",
    "pack": "npx web-ext build --ignore-files \"./**/*.md\" \"./src/\" \"./docs/\" \"./gh-pages/\" \"./image/for_readme/\" package.json package-lock.json \"tsconfig*.json\" webpack.config.js \"./image/logo.*\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robot-Inventor/spam-tweets-compressor.git"
  },
  "author": "Robot-Inventor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Robot-Inventor/spam-tweets-compressor/issues"
  },
  "homepage": "https://github.com/Robot-Inventor/spam-tweets-compressor#readme",
  "devDependencies": {
    "@material/mwc-checkbox": "0.25.1",
    "@material/mwc-circular-progress": "0.25.1",
    "@material/mwc-drawer": "0.25.1",
    "@material/mwc-formfield": "0.25.1",
    "@material/mwc-icon": "0.25.1",
    "@material/mwc-icon-button": "0.25.1",
    "@material/mwc-list": "0.25.1",
    "@material/mwc-switch": "0.25.1",
    "@material/mwc-tab-bar": "0.25.1",
    "@material/mwc-textarea": "0.25.1",
    "@material/mwc-top-app-bar-fixed": "0.25.1",
    "@types/chroma-js": "2.1.3",
    "@types/jest": "27.0.2",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "chroma-js": "2.1.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.2.2",
    "normalize-url": "7.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "sass": "1.42.1",
    "stylelint": "13.13.1",
    "stylelint-config-recommended-scss": "4.3.0",
    "stylelint-scss": "3.21.0",
    "ts-jest": "27.0.5",
    "ts-loader": "9.2.6",
    "typescript": "4.4.3",
    "web-ext": "6.4.0",
    "web-ext-types": "3.2.1",
    "webpack": "5.54.0",
    "webpack-cli": "4.8.0"
  }
}
